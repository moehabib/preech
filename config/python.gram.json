{
	"settings": {
		"fileTypes": ["py"]
	},


	"start": [
		{
			"insert": "class [[$classname]]():\\n[[$classbody]]",
			"alias": "class"
		},
		{
			"insert": "def [[$fname]]([[$fnargs]]):\\n[[$fnbody]]",
			"alias": "function"
		}
	],

	"classname": [
		{
			"insert": "Arithmetic",
			"alias": "arithmetic"
		}
	],
	"fname": [
		{
			"insert": "add",
			"alias" : "add"
		},
		{
			"insert": "__init__",
			"alias" : "constructuor"
		}
	],
	"fnargs": [
		{
			"insert": "",
			"alias": "continue"
		},

		{
			"insert": "[[%var]][[$moreArgs]]",
			"alias": "next"
		}
	],
	"fnbody": [
		{
			"insert":"",
			"alias":"continue"
		}
	],
	"moreArgs": [
		{
			"insert": "",
			"alias": "continue"
		},

		{
			"insert": ",[[%var]][[$moreArgs]]",
			"alias": "next"
		}
	]

}